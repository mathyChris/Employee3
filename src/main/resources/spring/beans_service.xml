<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

<!-- LoginService -->
<bean id="loginService" class="com.hybrid.service.LoginService">
    <property name="memberDao" ref="memberDao"/>
</bean>

<!-- CityListService -->
<bean id="cityListService" class="com.hybrid.service.CityListService">
    <property name="cityDao" ref="cityDao"/>
</bean>

<!-- CityPageService -->
<bean id="cityPageService" class="com.hybrid.service.CityPageService">
    <property name="cityDao" ref="cityDao"/>
</bean>

<!-- CityRegisterService -->
<bean id="cityRegisterService" class="com.hybrid.service.CityRegisterService">
    <property name="cityDao" ref="cityDao"/>
</bean>   

<!-- CityDetailService -->
<bean id="cityDetailService" class="com.hybrid.service.CityDetailService">
    <property name="cityDao" ref="cityDao"/>
</bean>

<!-- CityModifyService -->
<bean id="cityModifyService" class="com.hybrid.service.CityModifyService">
    <property name="cityDao" ref="cityDao"/>
</bean>

<!-- CityUnRegisterService -->
<bean id="cityUnRegisterService" class="com.hybrid.service.CityUnRegisterService">
    <property name="cityDao" ref="cityDao"/>
</bean>


<!-- MemberListService -->
<bean id="memberListService" class="com.hybrid.service.MemberListService">
    <property name="memberDao" ref="memberDao"/>
</bean>

<!-- MemberPageService -->
<bean id="memberPageService" class="com.hybrid.service.MemberPageService">
    <property name="memberDao" ref="memberDao"/>
</bean>

<!-- MemberRegisterService -->
<bean id="memberRegisterService" class="com.hybrid.service.MemberRegisterService">
    <property name="memberDao" ref="memberDao"/>
</bean>   

<!-- MemberModifyService -->
<bean id="memberModifyService" class="com.hybrid.service.MemberModifyService">
    <property name="memberDao" ref="memberDao"/>
</bean>

<!-- MemberDetailService -->
<bean id="memberDetailService" class="com.hybrid.service.MemberDetailService">
    <property name="memberDao" ref="memberDao"/>
</bean>

<!-- MemberUnRegisterService -->
<bean id="memberUnRegisterService" class="com.hybrid.service.MemberUnRegisterService">
    <property name="memberDao" ref="memberDao"/>
</bean>

</beans>
